  - name: PUID
    value: 1000
  - name: PGID
    value: 1000

service:
  main:
    ports:
      http:
        port: 7878

persistence:
  config:
    enabled: true
    size: 1Gi
    retain: true
  media:
    enabled: true
    storageClass: longhorn
    accessMode: ReadWriteMany
    mountPath: /data
    existingClaim: media-pvc

