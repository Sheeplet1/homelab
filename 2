  main:
    enabled: true
    className: nginx-internal
    hosts:
      - host: radarr.sheeplet.com
        paths:
          - path: /
            pathType: Prefix

serviceMonitor:
  main:
    enabled: true
    endpoints:
      - port: http
        scheme: http
        path: /metrics
        interval: 1m
        scrapeTimeout: 10s
